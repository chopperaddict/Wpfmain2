				Text="test for executon information"
				Padding="0 5 0 0"
			   FontSize="18"
			   FontWeight="Normal"
				Background="{StaticResource Green8}" 
				Height="34" Margin="0,0,0,0" />

		<!--#endregion Execution result textbox-->

	</Grid>
	
	<!--#endregion bottom Panel - combos etc panel-->


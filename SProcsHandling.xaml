				<!--#endregion 2 info panels (row 0)-->

				<!--second set-->
				<!--// this is toggled ON/Off to swap with SPInfoPanel above-->

				<!--#region Blanker-->

				<Grid  x:Name="Blanker" 	Grid.Row="0"
													   Height="60"
														VerticalAlignment="Top"
